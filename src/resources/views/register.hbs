<div class="mt-4 ml-4 mr-4 mb-4">
    <div class="row-register">
        <form id="form" method="POST" action="/register/user">

            <div class="form-group">
                <label for="exampleInputNameUser">Ф.И.О</label>
                <input type="nameUser" class="form-control" id="nameUser" name="nameUser"
                    placeholder="Введите фамилии, имени и отчества">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Адрес электронной почты </label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                    placeholder="Введите адрес электронной почты">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Пароль">
            </div>

            <div class="mt-2 mb-2">
                <p class="pl-2 bg-warning">{{message}}</p>
            </div>

            <div class="d-flex">
                <p>
                    Есть аккаунта?
                    <a href="/login" class="text-center text-primary mt-3 ">Логин</a>
                </p>
                <button type="submit" class="btn btn-primary mb-2 mr-2 btn-login">Регистрировать</button>
            </div>
        </form>
    </div>
</div>